# TrialForge AI - Environment Variables Template
# Copy this file to .env.local and fill in your values

# ============================================
# DATABASE
# ============================================
DATABASE_URL="postgresql://user:password@localhost:5432/trialforge"

# ============================================
# REDIS
# ============================================
REDIS_URL="redis://localhost:6379"

# ============================================
# AUTHENTICATION (Auth0)
# ============================================
# Get these from your Auth0 dashboard
AUTH0_DOMAIN="your-tenant.auth0.com"
AUTH0_CLIENT_ID="your-client-id"
AUTH0_CLIENT_SECRET="your-client-secret"
AUTH0_AUDIENCE="https://api.trialforge.ai"
AUTH0_ISSUER="https://your-tenant.auth0.com/"

# NextAuth (for web app)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate-a-random-secret-here"

# ============================================
# ANTHROPIC AI
# ============================================
ANTHROPIC_API_KEY="sk-ant-your-api-key-here"
AI_MODEL_VERSION="claude-sonnet-4-5-20250929"
AI_MAX_TOKENS=4096
AI_TEMPERATURE=0.7

# ============================================
# SERVICE URLS (Development)
# ============================================
# API Gateway
API_GATEWAY_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3000"

# WebSocket
NEXT_PUBLIC_WS_URL="ws://localhost:3000"

# Core Services (Railway internal URLs in production)
CASE_SERVICE_URL="http://localhost:3001"
JURY_PANEL_SERVICE_URL="http://localhost:3002"
RESEARCH_SERVICE_URL="http://localhost:3003"
PERSONA_SERVICE_URL="http://localhost:3004"
TRIAL_SESSION_SERVICE_URL="http://localhost:3005"
FOCUS_GROUP_SERVICE_URL="http://localhost:3006"

# AI Services
IDENTITY_RESOLUTION_URL="http://localhost:8000"
RESEARCH_SUMMARIZER_URL="http://localhost:8001"
PERSONA_SUGGESTER_URL="http://localhost:8002"
QUESTION_GENERATOR_URL="http://localhost:8003"
FOCUS_GROUP_ENGINE_URL="http://localhost:8004"
TRIAL_INSIGHT_ENGINE_URL="http://localhost:8005"

# ============================================
# FILE STORAGE
# ============================================
# Use Vercel Blob or S3
BLOB_READ_WRITE_TOKEN="your-vercel-blob-token"

# Or for S3:
# AWS_ACCESS_KEY_ID="your-access-key"
# AWS_SECRET_ACCESS_KEY="your-secret-key"
# AWS_REGION="us-east-1"
# AWS_S3_BUCKET="trialforge-assets"

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_USER=100          # requests per minute per user
RATE_LIMIT_ORG=1000          # requests per minute per organization

# ============================================
# TRANSCRIPTION SERVICE
# ============================================
# Choose one: Deepgram or AssemblyAI
DEEPGRAM_API_KEY="your-deepgram-api-key"
# ASSEMBLYAI_API_KEY="your-assemblyai-api-key"

# ============================================
# MONITORING & LOGGING
# ============================================
SENTRY_DSN="https://your-sentry-dsn"
LOG_LEVEL="info"              # debug, info, warn, error

# PostHog Analytics (optional)
NEXT_PUBLIC_POSTHOG_KEY="phc_your-key"
NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"

# ============================================
# FEATURE FLAGS
# ============================================
NEXT_PUBLIC_ENABLE_TRIAL_MODE=true
NEXT_PUBLIC_ENABLE_FOCUS_GROUPS=true
NEXT_PUBLIC_ENABLE_INTEGRATIONS=false

# ============================================
# DEVELOPMENT
# ============================================
NODE_ENV="development"        # development, production, test
PORT=3000

# ============================================
# PRODUCTION ONLY
# ============================================
# Set these in Railway/Vercel dashboards

# CORS Origins (comma-separated)
# CORS_ORIGINS="https://app.trialforge.ai,https://trial.trialforge.ai"

# Security
# ENCRYPTION_KEY="base64-encoded-encryption-key"
# JWT_SECRET="your-jwt-secret"

# Email Service (for notifications)
# SENDGRID_API_KEY="your-sendgrid-key"
# EMAIL_FROM="noreply@trialforge.ai"
